<form action="/addMusicToPlaylist" method="post">
    <select id="playlists" name="playlists">
        {{#each playlists}}
        <option value="{{this.title}}">{{this.title}}</option>
        {{else}}
        <p>Няма създаден плейлист</p>
        {{/each}}
    </select>

    <input type="hidden" value="{{specificMusic.title}}" name="title">
    <input type="hidden" value="{{specificMusic.singer}}" name="singer">
    <input type="hidden" value="{{specificMusic.ganre}}" name="ganre">
    <input type="hidden" value="{{specificMusic.URL}}" name="URL">
    <input type="submit" value="Submit">
</form>